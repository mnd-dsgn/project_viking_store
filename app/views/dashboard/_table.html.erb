<!-- Dynamically fill in h3 header, th's, and td's -->

<div class="row">
  <h3><%= titles %></h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <% headers.each do |h| %>
        <th><%=h%></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% data.each_with_index do |(key, val), idx| %>
      <tr>
        <% if extra_col %>
          <td><%= extra_col[idx] %></td>
        <% end %>    
        <td><%= key %></td>
        <td><%= val %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
